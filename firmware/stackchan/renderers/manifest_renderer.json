{
    "defines": {
        "XS_MODS": 1
    },
    "include": [
        "$(MODDABLE)/examples/manifest_commodetto.json",
        "$(MODULES)/commodetto/outline/manifest.json"
    ],
    "modules": {
        "*": [
            "./*"
        ]
    },
    "preload": [
        "renderer-base",
        "simple-face",
        "dog-face",
        "modifier",
        "decorator"
    ],
    "ble": {
        "*": [
            "$(MODULES)/network/ble/uart/bleservices/*"
        ]
    },
    "strip": [],
    "creation": {
        "static": 98304,
        "chunk": {
            "initial": 1536,
            "incremental": 512
        },
        "heap": {
            "initial": 512,
            "incremental": 64
        },
        "stack": 512,
        "keys": {
            "available": 512
        }
    },
    "config": {
        "sntp": "pool.ntp.org",
        "driver": {
            "panId": 1,
            "tiltId": 2,
            "pwmPan": 5,
            "pwmTilt": 2,
            "offsetTilt": 0,
            "offsetPan": 0
        },
        "serial": {
            "transmit": 17,
            "receive": 16
        },
        "rotation": 90
    },
    "resources": {
        "*-mask": [
            "$(MODDABLE)/examples/assets/fonts/OpenSans-Regular-24"
        ]
    },
    "bundle": {
        "id": "tech.moddable.stackchan",
        "devices": [
            "com.m5stack",
            "com.m5stack.fire",
            "com.m5stack.core2"
        ]
    },
    "platforms": {
        "esp32/m5stack_core2": {
            "include": [
                "./manifest_8mb_flash.json"
            ],
            "config": {
                "driver": {
                    "pwmPan": 19,
                    "pwmTilt": 27
                },
                "tts": {
                    "sampleRate": 24000
                },
                "serial": {
                    "transmit": 14,
                    "receive": 13
                },
                "rotation": 0
            }
        },
        "esp32/m5stack_cores3": {
            "build": {
                "PARTITIONS_FILE": "./sdkconfig/customPartitions.csv"
            },
            "config": {
                "driver": {
                    "pwmPan": 19,
                    "pwmTilt": 27
                },
                "tts": {
                    "sampleRate": 24000
                },
                "serial": {
                    "transmit": 17,
                    "receive": 18
                },
                "rotation": 0,
                "virtualButton": true
            }
        }
    }
}