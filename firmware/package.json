{
  "name": "stack-chan",
  "version": "0.2.1",
  "description": "A firmware of M5Stack Stack-chan module",
  "main": "stackchan/main.ts",
  "scripts": {
    "lint": "eslint src/** --ext .ts,.tsx",
    "lint:fix": "npm run lint --fix",
    "generate-speech-coqui": "node scripts/generate-speech-coqui.js",
    "generate-speech-voicevox": "node scripts/generate-speech-voicevox.js",
    "generate-speech-google": "env GOOGLE_APPLICATION_CREDENTIALS=/workspaces/stack-chan/firmware/scripts/key.json node scripts/generate-speech-google.js",
    "build": "mcconfig -d -m -p ${npm_config_target=esp32/m5stack} -t build ./stackchan/manifest.json",
    "postbuild": "ln -s $MODDABLE/build/tmp/${npm_config_target=esp32/m5stack}/stackchan/modules/tsconfig.json ./tsconfig.json",
    "deploy": "mcconfig -d -m -p ${npm_config_target=esp32/m5stack} -t deploy ./stackchan/manifest.json",
    "debug": "mcconfig -d -m -p ${npm_config_target=esp32/m5stack} ./stackchan/manifest.json",
    "mod": "mcrun -d -m -p ${npm_config_target=esp32/m5stack} ${npm_argument}",
    "setup": "xs-dev setup",
    "doctor": "xs-dev doctor"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/meganetaaan/stack-chan.git"
  },
  "keywords": [
    "M5Stack",
    "Robot",
    "Moddable",
    "Kawaii"
  ],
  "author": "Shinya Ishikawa",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/meganetaaan/stack-chan/issues"
  },
  "homepage": "https://github.com/meganetaaan/stack-chan#readme",
  "private": true,
  "devDependencies": {
    "@ffmpeg/core": "^0.11.0",
    "@ffmpeg/ffmpeg": "^0.11.6",
    "@google-cloud/text-to-speech": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "node-fetch": "^3.3.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4",
    "web-audio-engine": "^0.13.4",
    "xs-dev": "^0.20.0",
    "yargs": "^17.6.2"
  }
}
